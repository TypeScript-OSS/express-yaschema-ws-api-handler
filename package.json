{
  "name": "express-yaschema-ws-api-handler",
  "version": "2.1.13",
  "description": "Express handler support for yaschema-ws-api",
  "keywords": [
    "schema",
    "typescript",
    "express",
    "server",
    "websocket"
  ],
  "main": "lib/cjs/index.js",
  "module": "lib/mjs/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/TypeScript-OSS/express-yaschema-ws-api-handler.git",
  "homepage": "https://typescript-oss.github.io/express-yaschema-ws-api-handler/",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc -p tsconfig.cjs.json && tsc -p tsconfig.mjs.json",
    "build:dev": "trash dev-build && yarn build && mkdir dev-build && cp -r lib dev-build && cp package.json dev-build && (cd dev-build && echo 'package' `pwd`)",
    "clean": "trash coverage dev-build docs lib",
    "generate:docs": "npx typedoc src/index.ts --out docs --skipErrorChecking",
    "lint": "eslint 'src/**/*.ts?(x)' --max-warnings 0",
    "prepublishOnly": "yarn clean && yarn test && yarn lint && yarn test:audit && yarn clean && yarn build && yarn generate:docs",
    "test": "yarn test:check-circular-dependencies && yarn test:unit-tests",
    "test:audit": "yarn audit --level moderate; [[ $? -ge 4 ]] && exit 1 || exit 0",
    "test:check-circular-dependencies": "yarn build && npx madge --circular ./lib",
    "test:unit-tests:": "NODE_OPTIONS=--experimental-vm-modules npx jest --runInBand --coverage",
    "test:unit-tests": "yarn test:unit-tests: src"
  },
  "dependencies": {
    "express-ws": "^5.0.2",
    "express-yaschema-api-handler": "^2.3.0",
    "uuid": "^9.0.1",
    "yaschema": "^3.3.0",
    "yaschema-api": "^3.4.2",
    "yaschema-ws-api": "^2.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-ws": "^3.0.4",
    "@types/jest": "^29.5.11",
    "@types/lodash": "4.14.202",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "express": "^4.18.2",
    "jest": "29.7.0",
    "madge": "6.1.0",
    "prettier": "3.2.4",
    "trash-cli": "5.0.0",
    "ts-jest": "^29.1.2",
    "typedoc": "^0.25.7",
    "typescript": "5.3.3",
    "yaschema-ws-api-client": "^2.1.7"
  }
}
